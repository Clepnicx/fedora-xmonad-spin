Config {
    -- appearance
      font = "xft:Font Awesome 5 Free Solid:style=Solid:size=10, Font Awesome 5 Brands Regular:style=Regular:size=10, Font Awesome 5 Free Regular:style=Regular:size=10, Hack:size=8:antialias:true"
    , bgColor = "black"
    , fgColor = "grey"
    , border = BottomB
    , position = Top
    
    -- general behavior
    , lowerOnStart = True
    , allDesktops  = True
    , persistent   = True

    -- plugins
    , commands = [ Run Weather "EGPF" ["-t","<station>: <tempC>C","-L","18","-H","25","--normal","green","--high","red","--low","lightblue"] 36000
                 , Run Network "eth0" ["-L","0","-H","32","--normal","green","--high","red"] 10
                 , Run Network "eth1" ["-L","0","-H","32","--normal","green","--high","red"] 10
                 , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                 , Run Memory ["-t","Mem: <usedratio>%"] 10
                 , Run Swap [] 10
                 , Run Com "uname" ["-s","-r"] "" 36000
                 , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                 , Run StdinReader
                 ]
    , sepChar = "%"
    , alignSep = "}{"
    , template = "%StdinReader%}{%cpu% | %memory% | %eth0% - %eth1% | <fc=#ee9a00>%date%</fc>"
    }